@model IEnumerable<FitnessTracker.Models.Exercise>

@{
    ViewData["Title"] = "Index";
}

<h1>My Activity Log</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Log Activity</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateLogged)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnjoymentLevelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExertionLevelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Comments == null)
            { item.Comments = "(none)"; }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateLogged)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnjoymentLevel.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExertionLevel.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExerciseType.Type)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExerciseId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ExerciseId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ExerciseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
