@model FitnessTracker.Models.Exercise

@{
    ViewData["Title"] = "Details";
    if (Model.Comments == null)
    { Model.Comments = "(none)"; }
}

<h1>Details</h1>

<div>
    <h4>Exercise</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateLogged)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateLogged)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExerciseType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExerciseType.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration) minutes
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExertionLevelId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExertionLevel.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnjoymentLevelId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnjoymentLevel.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comments)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ExerciseId">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.ExerciseId">Delete</a> |
    <a asp-action="Index">Back to Activity Log</a>
</div>
