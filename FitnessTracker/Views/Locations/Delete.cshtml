@model FitnessTracker.Models.Location

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <hr />

    <p class="text-danger" style="font-weight:bold;font-size:1.5em">
        Are you sure you want to delete this?<br />
        Deleting this will also delete all entries in your history that use this location.<br />
        This cannot be undone!
    </p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="LocationId" />
        <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;<a class="btn btn-primary" asp-controller="Home" asp-action="Settings">Back</a>
    </form>
</div>
